{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "noImplicitAny": false,
        "noImplicitThis": true,
        "noImplicitReturns": true,
        "removeComments": false,
        "sourceMap": true,
        "noLib": false,
        "outDir": "build",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "emitDecoratorMetadata": true      
    },
    "include": [
        "src/**/*.ts"
    ]
}
